<div class="sticky-top">
  <ul class="nav flex-column bg-dark shadow rounded">
    <li class="nav-item">
      <%= link_to tenant_path(current_tenant), class: "nav-link #{'bg-light shadow rounded' if current_page?(tenant_path(current_tenant)) }" do %>
        <i class="fas fa-briefcase"></i>
        <%= current_tenant %>
        <% if ActsAsTenant.current_tenant %>
          <span class="badge badge-purple">
            <%= current_tenant.plan %>
          </span>
        <% end %>
      <% end %>
    </li>

    <li class="nav-item">
      <%= link_to dashboard_path, class: "nav-link #{'bg-light shadow rounded' if current_page?(dashboard_path) }" do %>
        <i class="fas fa-tachometer-alt"></i>
        Dashboard
      <% end %>
    </li>

    <li class="nav-item">
      <%= link_to members_path, class: "nav-link #{'bg-light shadow rounded' if request.path.starts_with?(members_path) }" do %>
        <i class="fas fa-users"></i>
        Members
        <% if ActsAsTenant.current_tenant %>
          <span class="badge badge-purple">
            <%= Member.count %>
          </span>
        <% end %>
      <% end %>
    </li>

    <li class="nav-item">
      <%= link_to contacts_path, class: "nav-link #{'bg-light shadow rounded' if request.path.starts_with?(contacts_path) }" do %>
        <i class="fas fa-address-book"></i>
        Contacts
        <% if ActsAsTenant.current_tenant %>
          <span class="badge badge-purple">
            <%= Member.count %>
          </span>
        <% end %>
      <% end %>
    </li>
  </ul>
</div>
