<%= simple_form_for(@tenant) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :plan, collection: Tenant::PLANS, include_blank: false, as: :radio_buttons, item_wrapper_class: 'radio-item' %>
    <% if @tenant.logo.attached? %>
      <%= image_tag @tenant.logo, size: "50x50", class: "rounded" %>
      <%= @tenant.logo.filename %>
      <%= number_to_human_size(@tenant.logo.byte_size) %>
    <% end %>

    <%= f.input :logo %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
