<h3>
  <div class="text-center">
    <%= controller_name.humanize + ":" %>
    <%= action_name.humanize %>

    <div class="badge text-bg-primary">
      <%= @users.count %>
    </div>
  </div>
</h3>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>id</th>
      <th>email</th>
      <th>tenats</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user.id, user %>
        </td>
        <td>
          <%= user.email %>
        </td>
        <td>
          <%= user.tenants.compact.join(', ') %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
